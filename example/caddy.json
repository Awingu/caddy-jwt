{
  "apps": {
    "http": {
      "servers": {
        "srv0": {
          "listen": [":8080"],
          "automatic_https": { "disable": true },
          "routes": [
            {
              "match": [{ "host": ["localhost"] }],
              "terminal": true,
              "handle": [
                {
                  "handler": "authentication",
                  "providers": {
                    "jwt": {
                      "mode": "internal",
                      "api": {
                        "endpoint": "http://127.0.0.1:2546/v1/auth",
                        "method": "HEAD"
                      },
                      "internal": {
                        "sign_key": "3OKI%06Y9zwasOS$x84T@W&E85p*fs4l",
                        "from_query": ["access_token"],
                        "user_claims": ["aud", "uid", "username"]
                      }
                    }
                  }
                }
              ]
            }
          ]
        }
      }
    }
  }
}
